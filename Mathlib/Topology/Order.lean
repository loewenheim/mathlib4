theorem nhds_generateFrom {g : Set (Set Œ±)} {a : Œ±} :
    @nhds Œ± (generateFrom g) a = ‚®Ö s ‚àà { s | a ‚àà s ‚àß s ‚àà g }, ùìü s := by
  letI := generateFrom g
  rw [nhds_def]
  refine le_antisymm (binf·µ¢_mono fun s ‚ü®as, sg‚ü© => ‚ü®as, .basic _ sg‚ü©) ?_
  refine le_inf·µ¢‚ÇÇ fun s ‚ü®ha, hs‚ü© => ?_; clear ‚Äπs ‚àà { s | a ‚àà s ‚àß IsOpen s }‚Ä∫
  induction hs
  case basic hs => exact inf·µ¢‚ÇÇ_le _ ‚ü®ha, hs‚ü©
  case univ => exact le_top.trans_eq principal_univ.symm
  case inter hs ht => exact (le_inf (hs ha.1) (ht ha.2)).trans_eq inf_principal
  case union‚Çõ _S hS =>
    let ‚ü®t, htS, hat‚ü© := ha
    exact (hS t htS hat).trans (principal_mono.2 <| subset_union‚Çõ_of_mem htS)
#align topological_space.nhds_generate_from TopologicalSpace.nhds_generateFrom

theorem tendsto_nhds_generateFrom {Œ≤ : Type _} {m : Œ± ‚Üí Œ≤} {f : Filter Œ±} {g : Set (Set Œ≤)} {b : Œ≤}
    (h : ‚àÄ s ‚àà g, b ‚àà s ‚Üí m ‚Åª¬π' s ‚àà f) : Tendsto m f (@nhds Œ≤ (generateFrom g) b) := by
  rw [nhds_generateFrom]

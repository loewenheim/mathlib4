variable {Œ± : Type u} {Œ≤ : Type v}

/-- The ordering on topologies on the type `Œ±`. `t ‚â§ s` if every set open in `s` is also open in `t`
(`t` is finer than `s`). -/
instance : PartialOrder (TopologicalSpace Œ±) :=
  { PartialOrder.lift (fun s => OrderDual.toDual (@IsOpen _ s))
      (fun _ _ h => topologicalSpace_eq h) with
    le := fun s t => ‚àÄ U, @IsOpen _ t U ‚Üí @IsOpen _ s U }

protected theorem le_def {Œ±} {t s : TopologicalSpace Œ±} : t ‚â§ s ‚Üî s.IsOpen ‚â§ t.IsOpen :=
  Iff.rfl
#align topological_space.le_def TopologicalSpace.le_def

theorem le_generateFrom_iff_forall_isOpen {g : Set (Set Œ±)} {t : TopologicalSpace Œ±} :
    t ‚â§ generateFrom g ‚Üî ‚àÄ ‚¶És‚¶Ñ, s ‚àà g ‚Üí @IsOpen _ t s :=
  ‚ü®fun ht s hs => ht _ <| TopologicalSpace.GenerateOpen.basic s hs, fun hg _s hs =>
    hs.recOn (fun _v hv => hg hv) t.isOpen_univ (fun u v _ _ => t.isOpen_inter u v)
      fun k _ => t.isOpen_union‚Çõ k‚ü©
#align le_generate_from_iff_subset_is_open TopologicalSpace.le_generateFrom_iff_forall_isOpen‚Çì

/-- If `s` equals the collection of open sets in the topology it generates,
  then `s` defines a topology. -/
protected def mkOfClosure (s : Set (Set Œ±)) (hs : { u | (generateFrom s).IsOpen u } = s) :
    TopologicalSpace Œ± where
  IsOpen u := u ‚àà s
  isOpen_univ := hs ‚ñ∏ TopologicalSpace.GenerateOpen.univ
  isOpen_inter := hs ‚ñ∏ TopologicalSpace.GenerateOpen.inter
  isOpen_union‚Çõ := hs ‚ñ∏ TopologicalSpace.GenerateOpen.union‚Çõ
#align mk_of_closure TopologicalSpace.mkOfClosure

theorem mkOfClosure_sets {s : Set (Set Œ±)} {hs : { u | (generateFrom s).IsOpen u } = s} :
    TopologicalSpace.mkOfClosure s hs = generateFrom s :=
  topologicalSpace_eq hs.symm
#align mk_of_closure_sets TopologicalSpace.mkOfClosure_sets

theorem gcGenerateFrom (Œ± : Type _) :
    GaloisConnection (fun t : TopologicalSpace Œ± => OrderDual.toDual { s | t.IsOpen s })
      (generateFrom ‚àò OrderDual.ofDual) := fun _ _ =>
  le_generateFrom_iff_forall_isOpen.symm

/-- The Galois coinsertion between `Set (Set Œ±)` and `TopologicalSpace Œ±` whose lower part sends a
  collection of subsets of `Œ±` to the topology they generate, and whose upper part sends a topology
  to its collection of open subsets. -/
def gciGenerateFrom (Œ± : Type _) :
    GaloisCoinsertion (fun t : TopologicalSpace Œ± => OrderDual.toDual { s | @IsOpen _ t s })
      (generateFrom ‚àò OrderDual.ofDual) where
  gc := gcGenerateFrom Œ±
  u_l_le _ s hs := TopologicalSpace.GenerateOpen.basic s hs
  choice g hg := TopologicalSpace.mkOfClosure g
    (Subset.antisymm hg <| le_generateFrom_iff_forall_isOpen.1 <| le_rfl)
  choice_eq _ _ := mkOfClosure_sets
#align gi_generate_from TopologicalSpace.gciGenerateFrom

theorem generateFrom_mono {Œ±} {g‚ÇÅ g‚ÇÇ : Set (Set Œ±)} (h : g‚ÇÅ ‚äÜ g‚ÇÇ) :
    generateFrom g‚ÇÇ ‚â§ generateFrom g‚ÇÅ :=
  (gcGenerateFrom _).monotone_u h
#align generate_from_mono TopologicalSpace.generateFrom_mono

theorem generateFrom_setOf_isOpen (t : TopologicalSpace Œ±) :
    generateFrom { s | @IsOpen _ t s } = t :=
  (gciGenerateFrom Œ±).u_l_eq t
#align generate_from_set_of_is_open TopologicalSpace.generateFrom_setOf_isOpen

theorem leftInverse_generateFrom :
    LeftInverse generateFrom fun t : TopologicalSpace Œ± => { s | t.IsOpen s } :=
  (gciGenerateFrom Œ±).u_l_leftInverse
#align left_inverse_generate_from TopologicalSpace.leftInverse_generateFrom

theorem generateFrom_surjective :
    Surjective (generateFrom : Set (Set Œ±) ‚Üí TopologicalSpace Œ±) :=
  (gciGenerateFrom Œ±).u_surjective
#align generate_from_surjective TopologicalSpace.generateFrom_surjective

theorem setOf_isOpen_injective : Injective fun t : TopologicalSpace Œ± => { s | @IsOpen _ t s } :=
  (gciGenerateFrom Œ±).l_injective
#align set_of_is_open_injective TopologicalSpace.setOf_isOpen_injective

/-- Topologies on `Œ±` form a complete lattice, with `‚ä•` the discrete topology
  and `‚ä§` the indiscrete topology. The infimum of a collection of topologies
  is the topology generated by all their open sets, while the supremum is the
  topology whose open sets are those sets open in every member of the collection. -/
instance : CompleteLattice (TopologicalSpace Œ±) := (gciGenerateFrom Œ±).liftCompleteLattice


/-- The only open sets in the indiscrete topology are the empty set and the whole space. -/
theorem isOpen_top_iff {Œ±} (U : Set Œ±) : (‚ä§ : TopologicalSpace Œ±).IsOpen U ‚Üî U = ‚àÖ ‚à® U = univ :=
  ‚ü®fun h => by
    induction h
    case basic h => exact False.elim h
    case univ => exact .inr rfl
    case inter h‚ÇÅ h‚ÇÇ =>
      rcases h‚ÇÅ with (rfl | rfl) <;> rcases h‚ÇÇ with (rfl | rfl) <;> simp
    case union‚Çõ _ ih =>
      simp only [union‚Çõ_eq_empty, or_iff_not_imp_left, not_forall, union‚Çõ_eq_univ_iff]
      rintro ‚ü®U, hU, hne‚ü© _
      obtain rfl : U = univ; exact (ih U hU).resolve_left hne
      exact ‚ü®_, hU, trivial‚ü©,
    by
      rintro (rfl | rfl)
      exacts [@isOpen_empty _ ‚ä§, @isOpen_univ _ ‚ä§]‚ü©
